    <Button
        android:id="@+id/btn_connect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_log"
        android:layout_marginTop="33dp"
        android:text="connect"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btn_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_take_pic"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="23dp"
        android:text="Start"
        android:textSize="30sp" />


    <Button
        android:id="@+id/btn_take_pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/et_filename"
        android:layout_alignParentStart="true"
        android:text="Take Picture"
        android:textSize="30sp" />


    <EditText
        android:id="@+id/et_filename"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/edt_masterAddress"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:hint="File Name"
        android:textSize="20sp" />


    <EditText
        android:id="@+id/edt_masterAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/edt_camera_frequency"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:hint="Master Address"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/edt_camera_frequency"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:hint="Camera Frequency"
        android:textSize="20sp" />


